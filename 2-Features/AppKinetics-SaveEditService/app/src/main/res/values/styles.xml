<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.GDSampleAppTheme" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bbd_blue</item>
        <item name="colorPrimaryDark">@color/bbd_blue</item>
        <item name="colorAccent">@color/bbd_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="actionMenuTextAppearance">@style/MenuTextAppearance</item>
        <item name="android:actionMenuTextColor">?attr/colorOnPrimary</item>
        <!-- Status bar color -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textSize">20dp</item>
        <item name="android:capitalize">none</item>
    </style>

</resources>
