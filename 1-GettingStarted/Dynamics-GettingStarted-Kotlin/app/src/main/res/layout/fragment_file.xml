<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              tools:context="com.blackberry.dynamics.sample.gettingstartedbbd.FileFragment"
              android:orientation="vertical"
              android:gravity="fill_horizontal"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load File"
            android:id="@+id/loadButton"
            android:layout_gravity="left|top"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save File"
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal|top"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear Text"
            android:id="@+id/clearButton"
            android:layout_gravity="right|top"
            />

    </LinearLayout>

    <com.good.gd.widget.GDTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter Some Text Below to Save"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

    <com.good.gd.widget.GDEditText
        android:layout_width="fill_parent"
        android:layout_height="246dp"
        android:id="@+id/fileContents"
        android:layout_gravity="center"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        />

</LinearLayout>
