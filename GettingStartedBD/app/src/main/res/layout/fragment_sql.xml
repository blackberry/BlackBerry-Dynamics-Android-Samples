<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="match_parent"
              tools:context="blackberry.example.com.gettingstartedbd.FileFragment"
              android:orientation="vertical"
              android:gravity="fill_horizontal"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Colours"
            android:id="@+id/loadButton"
            android:layout_gravity="left|top"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Colours"
            android:id="@+id/saveButton"
            android:layout_gravity="center_horizontal|top"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unselect All"
            android:id="@+id/clearButton"
            android:layout_gravity="right|top"/>

    </LinearLayout>

    <com.good.gd.widget.GDTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Load &amp; Save Your Favourite Colours"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="4"
        android:layout_gravity="center_horizontal"
        >

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:id="@+id/checkBlue"
            android:layout_row="0"
            android:layout_column="0"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red"
            android:id="@+id/checkRed"
            android:layout_row="0"
            android:layout_column="1"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green"
            android:id="@+id/checkGreen"
            android:layout_row="1"
            android:layout_column="0"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pink"
            android:id="@+id/checkPink"
            android:layout_row="1"
            android:layout_column="1"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Orange"
            android:id="@+id/checkOrange"
            android:layout_row="2"
            android:layout_column="0"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brown"
            android:id="@+id/checkBrown"
            android:layout_row="2"
            android:layout_column="1"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Purple"
            android:id="@+id/checkPurple"
            android:layout_row="3"
            android:layout_column="0"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:id="@+id/checkYellow"
            android:layout_row="3"
            android:layout_column="1"/>
    </GridLayout>

</LinearLayout>
