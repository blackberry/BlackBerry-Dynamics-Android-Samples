<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              tools:context="blackberry.example.com.gettingstartedbd.HttpFragment"
              android:orientation="vertical"
              android:padding="5dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Enter a URL To Load"
        android:id="@+id/textView2"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"/>


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/theUrl"
        android:text="https://developers.blackberry.com/"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go!"
        android:id="@+id/loadButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Note that you may need to whitelist this server for this application in Good Control."
        android:id="@+id/textView3"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:scrollbars = "vertical"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/httpContents"
        android:gravity="fill_horizontal"
        android:maxLines = "500"
        android:scrollbars = "vertical"
        android:text="This is where the first 1000 characters of the page will appear."/>

</LinearLayout>
