<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="Theme.GDSampleAppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bbd_blue</item>
        <item name="colorPrimaryDark">@color/bbd_blue</item>
        <item name="colorAccent">@color/bbd_blue</item>
        <!-- Status bar color -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Seperator">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <dimen name="action_bar_text_size">10sp</dimen>

</resources>