<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.msohm.blackberry.samples.bemsdirectorylookupsample.MainActivity">

    <Button
        android:text="@string/go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/getSPButton"
        android:onClick="getServiceProviders"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="@string/get_dir_service_providers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignBaseline="@+id/getSPButton"
        android:layout_alignBottom="@+id/getSPButton"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@+id/getSPButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:paddingTop="10dp">

        <TextView
            android:text="@string/output"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/outputTextView"
            android:focusable="true"
            android:scrollbars="vertical"
            android:minLines="15"
            android:textIsSelectable="true"/>
    </ScrollView>

    <Button
        android:text="@string/do_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/doSearch"
        android:onClick="onOpenSearch"
        android:layout_below="@+id/getSPButton"
        android:layout_alignParentEnd="true" />


</RelativeLayout>


